?start: program

program: statement* -> prgm

?statement: "let" IDENTIFIER "=" expression ";" -> asgn
          | "print" expression ";"              -> prnt

?expression: term
           | expression "+" term -> addn
           | expression "-" term -> subn

?term: factor
     | term "*" factor -> muln
     | term "/" factor -> divn

?factor: NUMBER -> numb
       | IDENTIFIER
       | "(" expression ")"

%import common.NUMBER
%import common.WS
%import common.CNAME -> IDENTIFIER

%ignore WS
